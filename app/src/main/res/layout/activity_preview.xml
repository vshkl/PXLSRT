<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <by.vshkl.pxlsrt.ui.customview.SquareImageView
        android:id="@+id/iv_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_blank"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/iv_preview"
        android:gravity="center"
        android:text="Retake or proceed"
        android:textColor="@color/colorIcons"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_blank"
        >

        <ImageView
            android:id="@+id/iv_retake"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            app:srcCompat="@drawable/ic_close"
            />

        <ImageView
            android:id="@+id/iv_proceed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="40dp"
            android:paddingTop="40dp"
            app:srcCompat="@drawable/ic_ok"
            />

    </LinearLayout>


</RelativeLayout>